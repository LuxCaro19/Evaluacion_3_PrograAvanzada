@model Evaluacion_THA.Models.trabajador
@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="row">
    <div class="col">
        <div class="mb-3 row">
            <label for="nombre" class="col-sm-2 col-form-label">Nombre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", placeholder = "Nombre" })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3 row">
            <label for="habitantes" class="col-sm-2 col-form-label">Apellido</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.apellido, new { @class = "form-control", placeholder = "Apellido" })
                @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <label for="habitantes" class="col-sm-2 col-form-label">Correo</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.correo, new { @class = "form-control", placeholder = "Correo" })
                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Registrar</button>
            <a href="@Url.Action("listar","trabajador")" class="btn btn-outline-success">Atras</a>
        </div>
    </div>
    <div class="col">
    </div>
</div>

